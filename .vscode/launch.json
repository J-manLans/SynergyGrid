{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug package: experiments",
      "type": "debugpy",
      "request": "launch",
      "module": "experiments",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": true
    },
    {
      "name": "Debug package: synergygrid",
      "type": "debugpy",
      "request": "launch",
      "module": "synergygrid",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": true
    },
    {
      "name": "Attach VS Code debugger to running the python packages above",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "${workspaceFolder}"
        }
      ]
    }
  ]
}
